{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/src/index.ts"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "backend/src/index.ts"
    },
    {
      "source": "/((?!api|uploads).*)",
      "destination": "frontend/dist/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}